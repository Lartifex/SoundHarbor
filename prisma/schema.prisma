generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @unique
  username      String    @unique
  firstName     String
  lastName      String
  // topArtists    Artist[]
  releasesOwned Release[]
  createdAt     DateTime? @default(now())
  updatedAt     DateTime? @updatedAt
}

