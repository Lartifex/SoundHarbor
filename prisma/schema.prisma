model Release {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  label       String
  releaseType String
  country     String
  releaseDate DateTime
  // genres      String[]
  imgUrl      String
  spotifyUri  String
  // artist      Artist[]
  artists     String[]
  tracklist   Track[]
  owners      User[]
  userId      Int?
}

model Track {
  id         Int      @id @default(autoincrement())
  duration   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  spotifyUrl String
  release    Release? @relation(fields: [releaseId], references: [id])
  releaseId  Int?
}
