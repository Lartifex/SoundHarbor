// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url      = "postgresql://juanvasquez:@localhost:5432/SoundHarbor?schema=SoundHarbor"
}

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  firstName    String
  lastName     String
  userData     UserData?
  topArtists   Artist[]
  recordsOwned Record[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model UserData {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  //TODO: Add fields for tokens?
}

model Artist {
  id        Int      @id @default(autoincrement())
  name      String
  genres    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  records   Record[]
  listeners User[]
}

model Record {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  label       String
  recordType  String
  country     String
  releaseDate DateTime
  genres      String[]
  discogsUri  String
  spotifyUri  String
  artist      Artist[]
  tracklist   Track[]
  owners      User[]
  userId      Int?
}

model Track {
  id         Int      @id @default(autoincrement())
  duration   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  spotifyUrl String
  imgUrl     String
  Record     Record?  @relation(fields: [recordsId], references: [id])
  recordsId  Int?
}
