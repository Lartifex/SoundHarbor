// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  firstName     String
  lastName      String
  userData      UserData?
  topArtists    Artist[]
  releasesOwned Release[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model UserData {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  //TODO: Add fields for tokens?
}

model Artist {
  id        Int       @id @default(autoincrement())
  name      String
  genres    String[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  releases  Release[]
  listeners User[]
}

model Release {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  label       String
  releaseType String
  country     String
  releaseDate DateTime
  genres      String[]
  discogsUri  String
  spotifyUri  String
  artist      Artist[]
  tracklist   Track[]
  owners      User[]
  userId      Int?
}

model Track {
  id         Int      @id @default(autoincrement())
  duration   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  spotifyUrl String?
  imgUrl     String
  release    Release? @relation(fields: [releaseId], references: [id])
  releaseId  Int?
}
